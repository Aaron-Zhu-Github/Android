<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/layoutControl"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"></View>

        <RadioGroup style="@style/style_tab_radiogroup">
            <com.zaaach.tabradiobutton.TabRadioButton
                android:id="@+id/trbText"
                style="@style/style_tab_radiobutton_text"
                android:drawableTop="@drawable/tab_text_selector"
                android:text="text"
                app:trb_drawable_size="24dp"
                app:trb_duration="200"
                app:trb_enable_animation="true"
                app:trb_scale_rate="0.8" />


            <com.zaaach.tabradiobutton.TabRadioButton
                android:id="@+id/trbPhoto"
                style="@style/style_tab_radiobutton_text"
                android:drawableTop="@drawable/tab_photo_selector"
                android:text="photo"
                app:trb_drawable_size="24dp"
                app:trb_duration="200"
                app:trb_enable_animation="true"
                app:trb_scale_rate="0.8" />

            <com.zaaach.tabradiobutton.TabRadioButton
                android:id="@+id/trbPicture"
                style="@style/style_tab_radiobutton_text"
                android:drawableTop="@drawable/tab_picture_selector"
                android:text="album"
                app:trb_drawable_size="24dp"
                app:trb_duration="200"
                app:trb_enable_animation="true"
                app:trb_scale_rate="0.8" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>